
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>withjre_windows</id>

  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>

  <formats>
    <format>jar</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac</directory>
      <outputDirectory>${file.separator}</outputDirectory>
      <excludes>
        <exclude>SciaReto.app${file.separator}Contents${file.separator}MacOS${file.separator}sciareto</exclude>
        <exclude>SciaReto.app${file.separator}Contents${file.separator}Resources${file.separator}icon.icns</exclude>
        <exclude>SciaReto.app${file.separator}Contents${file.separator}Resources${file.separator}icon.svg</exclude>
        <exclude>SciaReto.app${file.separator}Contents${file.separator}Resources${file.separator}icon.png</exclude>
      </excludes>
      <includes>
       <include>*/**</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}common</directory>
      <outputDirectory>SciaReto.app${file.separator}Contents${file.separator}MacOS</outputDirectory>
      <includes>
       <include>*/**</include>
      </includes>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}${file.separator}jre_macos_aarch64</directory>
      <outputDirectory>${file.separator}SciaReto.app${file.separator}Contents${file.separator}MacOS${file.separator}jre</outputDirectory>
      <includes>
        <include>*/**</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac${file.separator}SciaReto.app${file.separator}Contents${file.separator}MacOS${file.separator}sciareto</source>
      <destName>sciareto</destName>
      <outputDirectory>${file.separator}SciaReto.app${file.separator}Contents${file.separator}MacOS</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac${file.separator}SciaReto.app${file.separator}Contents${file.separator}Resources${file.separator}icon.icns</source>
      <outputDirectory>${file.separator}SciaReto.app${file.separator}Contents${file.separator}Resources</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac${file.separator}SciaReto.app${file.separator}Contents${file.separator}Resources${file.separator}icon.png</source>
      <outputDirectory>${file.separator}SciaReto.app${file.separator}Contents${file.separator}Resources</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac${file.separator}SciaReto.app${file.separator}Contents${file.separator}Resources${file.separator}icon.svg</source>
      <outputDirectory>${file.separator}SciaReto.app${file.separator}Contents${file.separator}Resources</outputDirectory>
    </file>
    <file>
      <source>${project.build.directory}${file.separator}${app.name}.jar</source>
      <destName>${artifactId}-${version}.jar</destName>
      <outputDirectory>${file.separator}SciaReto.app${file.separator}Contents${file.separator}MacOS</outputDirectory>
    </file>
  </files>
</assembly>
